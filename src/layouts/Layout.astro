---
import "@fontsource-variable/onest";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Hero from "@components/hero/Hero";
import Footer from "@components/navigation/Footer";
import Navbar from "@components/navigation/Navbar";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>Comité de Estudiantes de Ing. Ciencias de la Computación</title>
    <meta
      name="description"
      content="Comité de Estudiantes de Ingeniería Ciencias de la Computación de la universidad PUCMM Campus Santiago"
    />
    <ClientRouter />
  </head>
  <body
    class="flex flex-col min-h-screen absolute inset-0 -z-10 h-dvh w-full bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px]"
  >
    <header>
      <Navbar client:only="react" />
      <Hero client:only="react" />
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer>
      <Footer client:only="react" />
    </footer>
  </body>
</html>
